<LoginScreen>:
    name: "login"
    
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 50, 20, 50]  
        spacing: 20
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Iniciar Sesión"
            font_size: '24sp'
            bold: True
            color: 0.2, 0.4, 0.6, 1
            size_hint_y: None
            height: "50dp"

        TextInput:
            id: email_input
            hint_text: "Correo electrónico"
            multiline: False
            size_hint_y: None
            height: "48dp"
            font_size: '18sp'
            padding: [10, 10]

        TextInput:
            id: password_input
            hint_text: "Contraseña"
            multiline: False
            password: True
            size_hint_y: None
            height: "48dp"
            font_size: '18sp'
            padding: [10, 10]
        
        Button:
            text: "Iniciar sesión"
            size_hint_y: None
            height: "50dp"
            background_color: 0.2, 0.6, 0.4, 1
            font_size: '18sp'
            on_press: root.login()

        Label:
            id: error_label
            text: ""
            color: 1, 0, 0, 1
            font_size: '16sp'
            halign: "center"
            valign: "middle"
            size_hint_y: None
            height: "30dp"
        
        Button:
            text: "Registrarse"
            size_hint_y: None
            height: "50dp"
            background_color: 0.6, 0.4, 0.2, 1
            font_size: '18sp'
            on_press: root.go_to_register()

